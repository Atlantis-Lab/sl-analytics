{
  "$id": "user-logs.statistics",
  "type": "object",
  "required": ["type", "options"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["countOpenByPeriod", "devicePopular", "popularOverlayByDevice"]
    },
    "options": {
      "type": "object",
      "anyOf": [
        {
          "required": ["from", "to", "periodType", "overlayType"],
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "periodType": {
              "type": "string",
              "enum": [
                "Second",
                "Minute",
                "Hour",
                "DayOfWeek",
                "DayOfMonth",
                "DayOfYear",
                "Month",
                "Quarter",
                "Year"
              ]
            },
            "overlayType": {
              "type": "string"
            }
          }
        },
        {
          "required": ["from", "to"],
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            }
          }
        },
        {
          "required": ["from", "to", "device"],
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "device": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
