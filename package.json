{
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint ./packages/**/src/",
    "format": "prettier --write '*.{yml,yaml,json}' 'packages/**/{src,schemas}/**/*.{js,yml,yaml,json}'",
    "app:start": "yarn workspace @microfleet/app start",
    "auth:start": "yarn workspace @microfleet/auth start",
    "test": "lerna run test --stream"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/config-lerna-scopes": "8.3.4",
    "babel-eslint": "^10.0.3",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "cz-lerna-changelog": "2.0.2",
    "eslint": "^6.8.0",
    "husky": "3.1.0",
    "lerna": "3.20.2",
    "lint-staged": "9.5.0",
    "mocha": "^7.0.0",
    "prettier": "1.19.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/hapi": "^18.4.0",
    "@microfleet/core": "^15.7.0",
    "@microfleet/transport-amqp": "^15.1.4",
    "@microfleet/validation": "^8.1.2",
    "common-errors": "^1.0.5",
    "uuid": "^3.3.3"
  }
}
